<%= provide :title, t("views.words.wordlist") %>
<div class="container-fluid">
  <div class="row col-md-8 col-md-offset-2 text-left form-group">
    <h4><%= t "views.layouts.category" %></h4>
    <%= form_for words_path, method: :get do |f| %>
      <ul class="list-inline">
        <li>
          <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name),
            prompt: t("views.words.select_category"),
            class: "form-control" %>
        </li>
        <li>
          <%= f.radio_button "condition", :learned %>
          <%= t "views.words.learned" %>
        </li>
        <li>
          <%= f.radio_button "condition", :unlearned %>
          <%= t "views.words.unlearned" %>
        </li>
        <li>
          <%= f.radio_button "condition", :all %>
          <%= t "views.words.all" %>
        </li>
      </ul>
      <%= f.submit t("views.words.filter"),
        class: "btn btn-default col-md-2 col-md-offset-2" %>
    <% end %>
  </div>
  <div class="col-md-4 col-md-offset-1 text-left">
    <% @words.each do |word| %>
      <p><%= word.content %></p>
    <% end %>
  </div>
  <div class="col-md-7 text-left">
    <% @words.each do |word| %>
      <p><%= correct_answer word %></p>
    <% end %>
  </div>
</div>
