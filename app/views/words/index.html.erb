<%= provide :title, t("views.words.wordlist") %>
<div class="container-fluid">
  <div class="row col-md-8 col-md-offset-2 text-left form-group">
    <h4><%= t "views.layouts.category" %></h4>
    <%= form_for words_path, method: :get do |f| %>
      <ul class="list-inline">
        <li>
          <%= select_tag :category_id,
            options_from_collection_for_select(@categories, :id, :name,
            params[:category_id]),
            include_blank: t("views.words.select_category"),
            class: "form-control" %>
        </li>
        <li>
          <%= radio_button_tag :condition, :learned,
            (true if params[:condition] == "learned") %>
          <%= t "views.words.learned" %>
        </li>
        <li>
          <%= radio_button_tag :condition, :unlearned,
            (true if params[:condition] == "unlearned") %>
          <%= t "views.words.unlearned" %>
        </li>
        <li>
          <%= radio_button_tag :condition, :all,
          (true if(params[:condition] == "all" ||
            params[:condition].blank?)) %>
          <%= t "views.words.all" %>
        </li>
      </ul>
      <%= f.submit t("views.words.filter"),
        class: "btn btn-default col-md-2 col-md-offset-2" %>
    <% end %>
  </div>
  <%= "#{t "views.words.count"} #{@words.count}" %>
  <div class="col-md-4 col-md-offset-1 text-left">
    <div class="panel">
      <h4><%= t "views.words.word_title" %></h4>
    </div>
    <% @words.each do |word| %>
      <p><%= word.content %></p>
    <% end %>
  </div>
  <div class="col-md-4 text-left">
    <div class="panel">
      <h4><%= t "views.words.word_answer_title" %></h4>
    </div>
    <% @words.each do |word| %>
      <p><%= correct_answer word %></p>
    <% end %>
  </div>
  <%= will_paginate %>
</div>
